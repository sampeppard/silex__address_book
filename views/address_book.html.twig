<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <title>Silex Address Book App</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    </head>
    <body>
        <div class="container">
            <h1>Address Book made with Silex and Twig!</h1>
            {% if list_of_contacts is not empty %}
            <p>Listed Addresses</p>
                {% for contact in list_of_contacts %}
                    <ul class="list-group">
                        <li class="list-group-item">Name: {{ contact.getFirstName }} {{ contact.getLastName }}</li>
                        <li class="list-group-item">Address: {{ contact.getAddress }}, {{ contact.getCity }} {{ contact.getZip }}</li>
                        <li class="list-group-item">Phone Number: {{ contact.getPhoneNumber }}</li>
                    </ul>
                {% endfor %}
            {% endif %}

            <br>
            <form action="/create_contact" method="post">
                <div class="form-group">
                    <label for="first_name">First Name:</label>
                    <input id="first_name" class="form-control" name="first_name">
                </div>
                <div class="form-group">
                    <label for="last_name">Last Name:</label>
                    <input id="last_name" class="form-control" name="last_name">
                </div>
                <div class="form-group">
                    <label for="phone_number">Phone Number:</label>
                    <input id="phone_number" class="form-control" name="phone_number" maxlength="10">
                </div>
                <div class="form-group">
                    <label for="address">Address:</label>
                    <input id="address" class="form-control" name="address">
                </div>
                <div class="form-group">
                    <label for="city">City:</label>
                    <input id="city" class="form-control" name="city">
                </div>
                <div class="form-group">
                    <label for="state">State:</label>
                    <input id="state" class="form-control" name="state">
                </div>
                <div class="form-group">
                    <label for="zip">Zip Code:</label>
                    <input id="zip" class="form-control" name="zip" maxlength="5">
                </div>
                <button type="submit" class="btn btn-success">Add Contact</button>
            </form>

            <br>

            <form action="/delete_contacts" method="post">
                <button type="submit" class="btn btn-danger">Delete Contacts</button>
            </form>
        </div>
    </body>
</html>
